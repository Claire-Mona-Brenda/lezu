<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:id="@+id/lin_user_info"
    android:background="@color/color_F2F2F2">

    <include layout="@layout/include_title_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/re_revise_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_95"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:background="@color/color_ffffff">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_header"
                    android:layout_width="@dimen/dp_64"
                    android:layout_height="@dimen/dp_64"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/touxiang" />

                <ImageView
                    android:id="@+id/ic_right"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toStartOf="@+id/ic_right"
                    android:text="@string/revise_photo"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:paddingTop="@dimen/dp_18"
                android:paddingBottom="@dimen/dp_13"
                android:background="@color/color_ffffff">

                <TextView
                    android:id="@+id/tv_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/change_pwd"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />



                <ImageView
                    android:id="@+id/pwd_right"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_right" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_bind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:paddingTop="@dimen/dp_18"
                android:paddingBottom="@dimen/dp_13"
                android:background="@color/color_ffffff">

                <TextView
                    android:id="@+id/tv_bind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/bind_mobile"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />



                <ImageView
                    android:id="@+id/bind_right"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_right" />
                <TextView
                    android:id="@+id/tv_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/bind_right"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_333333"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/re_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20"
                android:paddingTop="@dimen/dp_18"
                android:paddingBottom="@dimen/dp_13"
                android:background="@color/color_ffffff">

                <TextView
                    android:id="@+id/tv_tips_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/version_number"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_333333"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/activity_user_info_tv_login_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:textColor="@color/text_org"
                android:textSize="@dimen/sp_16"
                android:text="@string/login_out"
                android:gravity="center"
                android:background="@color/color_ffffff"
                android:layout_marginTop="@dimen/dp_60"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
