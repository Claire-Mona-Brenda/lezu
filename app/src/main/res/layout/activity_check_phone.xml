<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/include_title_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/style_line" />

    <LinearLayout
        android:layout_width="@dimen/dp_240"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_45"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/activity_check_phone_tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tips_phone_number_"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/activity_check_phone_tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="@dimen/dp_55"
        android:layout_marginStart="@dimen/dp_33"
        android:layout_marginEnd="@dimen/dp_33">

        <EditText
            android:id="@+id/activity_check_phone_edt_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="@string/update_phone_input_code_hint"
            android:maxLength="11"
            android:inputType="number"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_black"/>
        <Button
            android:id="@+id/tv_getVerify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/regist_get_verfication_num"
            android:textColor="@color/selected_text_enable_color_blue_org"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_33"
        android:layout_marginEnd="@dimen/dp_33"
        android:background="@color/common_drivder_line" />


    <Button
        android:id="@+id/activity_check_phone_btn_next"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_70"
        android:background="@drawable/shape_main"
        android:text="@string/common_next"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_16" />
</LinearLayout>