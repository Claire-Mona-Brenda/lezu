<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_title_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/style_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_26"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/add_house_flow_address"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/add_house_flow_info"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/add_house_flow_introduce"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/add_house_flow_finish"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/text_blue" />

        <View
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_9"
            android:background="@drawable/shape_circle_blue"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/text_blue" />
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/text_gray" />

        <View
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_9"
            android:background="@drawable/shape_circle_gray"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:background="@color/text_gray" />
        <View
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_9"
            android:background="@drawable/shape_circle_gray"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:background="@color/text_gray" />
        <View
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_9"
            android:background="@drawable/shape_circle_gray"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/text_black"
        android:text="@string/add_house_fill_address"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_48"/>
    <TextView
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_gray"
        android:text="@string/add_house_fill_address_tips"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_15"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/style_line"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"/>
    <LinearLayout
        android:id="@+id/activity_add_house_address_ll_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_24">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_60"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"
            android:text="@string/add_house_choose_estate"
            android:typeface="sans"
            android:textStyle="bold"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/activity_add_house_address_tv_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dp_20"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_16"
            android:text="@string/add_house_choose_estate_tips"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_28"
            android:src="@mipmap/icon_arrow"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/style_line"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_5"/>

    <LinearLayout
        android:id="@+id/activity_add_house_address_ll_real_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dp_24"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:typeface="sans"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"
            android:text="@string/add_house_choose_real_location"/>
        <EditText
            android:id="@+id/activity_add_house_address_edt_real_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_11"
            android:textColorHint="@color/text_gray"
            android:maxLength="30"
            android:textSize="@dimen/sp_16"
            android:hint="@string/add_house_choose_real_location_tips"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/style_line"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"/>
</LinearLayout>