<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title_white" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_103"
        android:background="@mipmap/orange_bg">
        <TextView
            android:id="@+id/activityt_bill_info_tv_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_18"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/text_white"
            android:typeface="sans"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/activityt_bill_info_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/style_text_menoy_1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_42"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/style_bg_card_1"
        android:textColor="@color/color_cccccc"
        android:textSize="@dimen/style_text_context"
        android:text="@string/bill_explain"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_1"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/style_bg_card_2">
        <TextView
            android:id="@+id/activity_info_tv_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_context"
            android:text="@string/bill_info_type"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15" />
        <TextView
            android:id="@+id/activity_info_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_context"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_alignTop="@+id/activity_info_tv_type_title" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/style_line"
            android:layout_below="@+id/activity_info_tv_type_title"
            android:layout_marginTop="@dimen/dp_15"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/activityt_bill_info_rl_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/style_bg_card_2">
        <TextView
            android:id="@+id/activity_info_tv_status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_context"
            android:text="@string/bill_info_status"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15" />
        <TextView
            android:id="@+id/activityt_bill_info_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_ren"
            android:textSize="@dimen/style_text_context"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_alignTop="@+id/activity_info_tv_status_title" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/style_line"
            android:layout_below="@+id/activity_info_tv_status_title"
            android:layout_marginTop="@dimen/dp_15"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/style_bg_card_2">
        <TextView
            android:id="@+id/activity_info_tv_time_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_context"
            android:text="@string/bill_info_time"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15" />
        <TextView
            android:id="@+id/activityt_bill_info_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_context"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_alignTop="@+id/activity_info_tv_time_title" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/style_line"
            android:layout_below="@+id/activity_info_tv_time_title"
            android:layout_marginTop="@dimen/dp_15"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/style_bg_card_2">
        <TextView
            android:id="@+id/activity_info_tv_number_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_context"
            android:text="@string/bill_info_number"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15" />
        <TextView
            android:id="@+id/activity_info_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_context"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_alignTop="@+id/activity_info_tv_number_title" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/style_line"
            android:layout_below="@+id/activity_info_tv_number_title"
            android:layout_marginTop="@dimen/dp_15"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_info_rl_belance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/style_bg_card_2">
        <TextView
            android:id="@+id/activity_info_tv_belance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_context"
            android:text="@string/bill_info_belance"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15" />
        <TextView
            android:id="@+id/activity_info_tv_belance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_context"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_alignTop="@+id/activity_info_tv_belance_title" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/style_line"
            android:layout_below="@+id/activity_info_tv_belance_title"
            android:layout_marginTop="@dimen/dp_15"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_info_rl_endtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/style_bg_card_2"
        android:visibility="gone">
        <TextView
            android:id="@+id/activity_info_tv_endtime_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_context"
            android:text="@string/bill_info_endtime"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15" />
        <TextView
            android:id="@+id/activity_info_tv_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_context"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_alignTop="@+id/activity_info_tv_endtime_title" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/style_line"
            android:layout_below="@+id/activity_info_tv_endtime_title"
            android:layout_marginTop="@dimen/dp_15"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/style_bg_card_2">
        <TextView
            android:id="@+id/activity_info_tv_more_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_context"
            android:text="@string/bill_info_more"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15" />
        <TextView
            android:id="@+id/activity_info_tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_context"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_alignTop="@+id/activity_info_tv_more_title" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/style_line"
            android:layout_below="@+id/activity_info_tv_more_title"
            android:layout_marginTop="@dimen/dp_15"/>
    </RelativeLayout>
</LinearLayout>