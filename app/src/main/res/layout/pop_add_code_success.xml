<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dp_330"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_45"
        android:background="@drawable/shape_user"
        android:paddingStart="@dimen/dp_36"
        android:paddingEnd="@dimen/dp_36"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_org"
            android:textSize="@dimen/sp_18"
            android:text="@string/please_success_code"
            android:layout_marginTop="@dimen/dp_60"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:text="@string/acquire"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:typeface="sans" />
            <TextView
                android:id="@+id/pop_add_code_tv_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_16" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/text_black"
                android:typeface="sans"
                android:textStyle="bold"
                android:text="@string/open_authority"/>
        </LinearLayout>
        
        <TextView
            android:id="@+id/pop_add_code_tv_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_16"
            android:text="@string/common_sure"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_17"
            android:background="@drawable/shape_button"/>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/dp_95"
        android:layout_height="@dimen/dp_85"
        android:src="@mipmap/giftbox_png"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>