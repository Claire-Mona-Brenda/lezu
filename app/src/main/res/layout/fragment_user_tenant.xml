<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/style_bg_card_1"
    tools:context="com.konka.renting.landlord.user.UserFragment">

    <include layout="@layout/include_title_user"
        android:id="@+id/frame_user_title"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/frame_user_title"
    android:layout_marginTop="@dimen/dp_1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:layout_marginBottom="@dimen/dp_20"
            android:orientation="vertical">

            <include layout="@layout/include_tenant_user_nickname" />
        </LinearLayout>

</ScrollView>
</RelativeLayout>
