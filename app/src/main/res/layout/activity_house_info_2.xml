<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff">

    <include layout="@layout/include_title_text" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/activity_house_info_nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/activity_house_info_ll_button"
        android:layout_below="@+id/lin_title"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_30">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_156"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/real_estate_bg" />

                <TextView
                    android:id="@+id/activity_house_info_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_28"
                    android:layout_marginTop="@dimen/dp_28"
                    android:text="- -"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/sp_20" />

                <LinearLayout
                    android:id="@+id/activity_house_info_ll_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_116"
                    android:layout_below="@+id/activity_house_info_tv_name"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_28"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:background="@drawable/shape_user"
                    android:elevation="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/house_info_type"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/activity_house_info_tv_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_24"
                            android:text="- -"
                            android:textColor="@color/text_org"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:typeface="sans" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/house_info_area"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/activity_house_info_tv_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_24"
                            android:text="- -"
                            android:textColor="@color/text_org"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:typeface="sans" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/house_info_floor"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <TextView
                            android:id="@+id/activity_house_info_tv_floor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_24"
                            android:text="- -"
                            android:textColor="@color/text_org"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:typeface="sans" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/activity_house_info_ll_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/activity_house_info_ll_bind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/activity_house_info_img_bind"
                        android:layout_width="@dimen/dp_74"
                        android:layout_height="@dimen/dp_74"
                        android:src="@mipmap/unbounded" />

                    <TextView
                        android:id="@+id/activity_house_info_tv_bind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="@string/house_info_setting_bind_clock"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_house_info_ll_open_manege"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/activity_house_info_img_open_manege"
                        android:layout_width="@dimen/dp_74"
                        android:layout_height="@dimen/dp_74"
                        android:src="@mipmap/management" />

                    <TextView
                        android:id="@+id/activity_house_info_tv_open_manege"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="@string/house_info_setting_clock_manage"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_house_info_ll_ren_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/activity_house_info_img_ren_list"
                        android:layout_width="@dimen/dp_74"
                        android:layout_height="@dimen/dp_74"
                        android:src="@mipmap/tenants" />

                    <TextView
                        android:id="@+id/activity_house_info_tv_ren_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="@string/house_info_setting_rent"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_house_info_ll_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/activity_house_info_img_edit"
                        android:layout_width="@dimen/dp_74"
                        android:layout_height="@dimen/dp_74"
                        android:src="@mipmap/editor" />

                    <TextView
                        android:id="@+id/activity_house_info_tv_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_10"
                        android:text="@string/house_info_setting_edit"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginBottom="@dimen/dp_17"
                android:text="@string/house_info_confit"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:typeface="sans" />


            <TextView
                android:id="@+id/activity_house_info_tv_config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_28"
                android:layout_marginEnd="@dimen/dp_28"
                android:text="@string/nothing"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginBottom="@dimen/dp_17"
                android:text="@string/add_house_house_introduce"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/activity_house_info_tv_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_28"
                android:text="@string/nothing"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_28"
                android:layout_marginTop="@dimen/dp_32"
                android:layout_marginBottom="@dimen/dp_17"
                android:text="@string/add_house_house_img"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:typeface="sans" />

            <com.konka.renting.landlord.house.widget.PicstandardWidget
                android:id="@+id/activity_house_info_pw_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/activity_house_info_ll_official"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_28"
                    android:layout_marginTop="@dimen/dp_32"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:text="@string/house_info_official"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/activity_house_info_recycler_official"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_28" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_45">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_28"
                    android:layout_marginTop="@dimen/dp_32"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="@string/house_info_address"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/activity_house_info_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_28"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_13" />

                <com.konka.renting.landlord.house.view.OnTouchMapView
                    android:id="@+id/activity_house_info_rl_mapview_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.amap.api.maps.MapView
                        android:id="@+id/activity_house_info_mapview_address"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_160"
                        android:layout_marginStart="@dimen/dp_28"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginEnd="@dimen/dp_20" />
                </com.konka.renting.landlord.house.view.OnTouchMapView>

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/activity_house_info_ll_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/color_ffffff"
        android:elevation="@dimen/dp_10"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        android:visibility="gone">

        <TextView
            android:id="@+id/activity_house_info_tv_public"
            android:layout_width="@dimen/dp_156"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@drawable/shape_button_main"
            android:gravity="center"
            android:text="@string/start_to_rent"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/activity_house_info_tv_create"
            android:layout_width="@dimen/dp_156"
            android:layout_height="@dimen/dp_44"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/shape_button_green"
            android:gravity="center"
            android:text="@string/house_creat_order"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</RelativeLayout>