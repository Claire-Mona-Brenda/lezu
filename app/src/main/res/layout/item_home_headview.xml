<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        app:rollviewpager_hint_gravity="center"
        app:rollviewpager_hint_paddingBottom="16dp"
        app:rollviewpager_play_delay="3000"/>

    <LinearLayout
        android:id="@+id/linear_articles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@android:color/white"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">
        
        <LinearLayout
            android:id="@+id/linear_articles_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">
            
        </LinearLayout>

        <TextView
            android:id="@+id/tv_article_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/icon_right_arrow"
            android:layout_gravity="center_vertical|right"
            android:drawablePadding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:textColor="@color/common_light_gray"
            android:text="@string/common_more"
            android:textSize="@dimen/common_text_size_smallest"
            android:visibility="gone"/>
        
    </LinearLayout>


    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:textSize="@dimen/common_text_size_small"
        android:textColor="@android:color/black"
        android:drawablePadding="@dimen/dp_10"
        android:text="@string/landlord_home_tips"
        android:drawableLeft="@mipmap/icon_tips"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/linear_grid"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@android:color/white"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        >
        <TextView
            android:id="@+id/tv_more_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/home_hot"
            android:layout_gravity="center_vertical|left"
            android:drawablePadding="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:text="@string/landlord_home_hot_house"
            android:textSize="@dimen/common_text_size_middle"
            />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/icon_right_arrow"
            android:layout_gravity="center_vertical|right"
            android:drawablePadding="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:textColor="@color/common_light_gray"
            android:text="@string/common_more"
            android:textSize="@dimen/style_text_context"
            />


    </FrameLayout>
</LinearLayout>