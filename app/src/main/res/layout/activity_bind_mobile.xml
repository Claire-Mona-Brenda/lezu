<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/common_bg"
    tools:context="com.konka.renting.login.RegistActivity">

    <include layout="@layout/include_title_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size_small"
            android:text="@string/regist_phone"
            />

        <EditText
            android:id="@+id/edit_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:layout_marginLeft="@dimen/dp_15"
            android:hint="@string/login_phone_hint"
            android:inputType="phone"
            android:textColor="@color/common_light_gray"
            android:textSize="@dimen/common_text_size_small"
            android:background="@android:color/transparent"
            />

        <Button
            android:id="@+id/btn_get_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:text="@string/regist_get_verfication_num"
            android:textColor="@color/common_title"
            android:textSize="@dimen/common_text_size_smallest"
            android:background="@drawable/shape_main_stroke"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dp_1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/common_text_size_small"
            android:text="@string/regist_verfication_num"
            />

        <EditText
            android:id="@+id/edit_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:layout_marginLeft="@dimen/dp_30"
            android:hint="@string/regist_verfication_num_hint"
            android:textColor="@color/common_light_gray"
            android:textSize="@dimen/common_text_size_small"
            android:background="@android:color/transparent"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="绑定手机"
        android:layout_margin="@dimen/dp_10"
        android:background="@drawable/shape_login_button"
        android:textColor="@android:color/white"
        android:textSize="@dimen/common_text_size_middle"/>

</LinearLayout>