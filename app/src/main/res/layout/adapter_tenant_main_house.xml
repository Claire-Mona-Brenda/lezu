<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/dp_8"
    android:layout_marginEnd="@dimen/dp_4">
    <androidx.cardview.widget.CardView
        android:id="@+id/adapter_tenant_main_house_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">
        <ImageView
            android:id="@+id/adapter_tenant_main_house_iv_icon"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_97"
            android:scaleType="centerCrop"
            android:src="@mipmap/fangchan_jiazai"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/adapter_tenant_main_house_tv_name"
        android:layout_width="@dimen/dp_160"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:lines="1"
        android:ellipsize="end"
        android:typeface="sans"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_black"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:gravity="bottom">
        <TextView
            android:id="@+id/adapter_tenant_main_house_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_2"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_ren"
            android:typeface="sans"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/adapter_tenant_main_house_tv_price_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_ren"
            android:typeface="sans"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>