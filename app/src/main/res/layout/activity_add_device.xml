<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    tools:context="com.konka.renting.landlord.gateway.AddDeviceActivity">

    <include layout="@layout/include_title_text"/>

    <EditText
        android:id="@+id/edit_device_name"
        android:layout_marginTop="@dimen/common_margin"
        android:hint="@string/device_add_hint_name"
        style="@style/add_edit"
       />

    <EditText
        android:id="@+id/edit_device_alias"
        style="@style/add_edit"
        android:layout_marginTop="@dimen/dp_1"
        android:hint="@string/device_add_hint_alias"/>


    <FrameLayout
        android:id="@+id/frame_door_type"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_10"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_item_height"
            android:gravity="center_vertical"
            android:textColor="@color/color_515151"
            android:textSize="@dimen/common_text_size_small"
            android:text="@string/device_item_choice_door_type"
            android:paddingRight="@dimen/common_margin"
            />

        <TextView
            android:id="@+id/tv_door_type"
            android:layout_width="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_height="@dimen/common_item_height"
            android:gravity="center_vertical"
            android:textColor="@color/color_515151"
            android:textSize="@dimen/common_text_size_small"
            android:drawablePadding="@dimen/dp_10"
            android:paddingRight="@dimen/common_margin"
            android:drawableRight="@mipmap/icon_arrow"
            />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_margin"
            android:text="@string/device_add_install_tips_title"
            android:textColor="@color/color_E50113"
            android:textSize="@dimen/common_text_size_small"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_add_install_tips_1"
            android:textColor="@color/color_515151"
            android:layout_marginTop="@dimen/common_margin"
            android:lineSpacingExtra="@dimen/dp_3"
            android:textSize="@dimen/common_text_size_small"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/device_add_install_tips_2"
            android:textColor="@color/color_515151"
            android:layout_marginTop="@dimen/common_margin"
            android:lineSpacingExtra="@dimen/dp_3"
            android:textSize="@dimen/common_text_size_small"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin"
            android:src="@mipmap/pic_mental"
            />

    </LinearLayout>
    
    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_title_height"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/shape_red"
        android:textColor="@android:color/white"
        android:textSize="@dimen/common_text_size_middle"
        android:text="@string/common_complete"/>

</LinearLayout>
