<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/style_bg_page">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_title_height"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/chevron" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_17"
            android:text="@string/common_back"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:paddingTop="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_12"
    android:paddingStart="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/text_black"
        android:text="@string/open_manage_pwd_tips" />
    <TextView
        android:id="@+id/activity_manage_pwd_tv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/text_ren" />
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tips_manage_pwd_fail"
            android:textSize="@dimen/style_text_context"
            android:textColor="@color/text_gray"
            />
        <TextView
            android:id="@+id/activity_manage_pwd_tv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pwd_restart"
            android:textSize="@dimen/style_text_context"
            android:textColor="@color/text_blue"
            android:padding="@dimen/dp_10"/>
    </LinearLayout>

</LinearLayout>