<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_bill"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_serial_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/bill_serial_num"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/common_text_size_small" />

        <TextView
            android:id="@+id/tv_pay_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bill_unpay"
            android:textColor="@color/common_title"
            android:textSize="@dimen/common_text_size_small" />
    </LinearLayout>

    <include layout="@layout/include_view_line" />

    <include layout="@layout/item_room" />

    <include layout="@layout/include_view_line" />

    <FrameLayout
        android:id="@+id/frame_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <Button
            android:id="@+id/btn_collection"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:background="@drawable/shape_button"
            android:text="@string/bill_collection"
            android:textColor="@android:color/white"
            android:textSize="@dimen/common_text_size_small" />


    </FrameLayout>
</LinearLayout>