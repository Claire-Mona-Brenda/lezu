<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">
<TextView
    android:id="@+id/adapter_clock_manage_tv_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_24"
    android:textColor="@color/text_black"
    android:textSize="@dimen/sp_13" />
    <TextView
        android:id="@+id/adapter_clock_manage_tv_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/sp_13"
        android:text="@string/remove"
        android:padding="@dimen/dp_10"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_15"/>
    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_5"
        android:background="@color/text_blue"
        android:layout_toStartOf="@+id/adapter_clock_manage_tv_remove"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/adapter_clock_manage_tv_rename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/sp_13"
        android:text="@string/rename"
        android:padding="@dimen/dp_10"
        android:layout_toStartOf="@+id/adapter_clock_manage_tv_remove"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_10"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/style_line"
        android:layout_below="@+id/adapter_clock_manage_tv_name"/>
</RelativeLayout>