<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_8"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:background="@mipmap/mybank_bg">
        <ImageView
            android:id="@+id/img_bank_icon"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_18"
            android:src="@mipmap/bank_other"/>
        <TextView
            android:id="@+id/tv_bank_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_bank_icon"
            android:layout_alignTop="@+id/img_bank_icon"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"/>
        <TextView
            android:id="@+id/tv_bank_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_below="@+id/tv_bank_type"
            android:layout_alignStart="@+id/tv_bank_type"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_12"/>
    </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/adapter_bank_card_tv_del"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_85"
        android:background="@drawable/shape_rent_left"
        android:text="@string/common_del"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_16"
        android:gravity="center"/>

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>