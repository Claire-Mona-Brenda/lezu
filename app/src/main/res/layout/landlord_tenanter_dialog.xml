<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_30"
    android:layout_marginEnd="@dimen/dp_30"
    android:background="@drawable/shape_white"
    android:orientation="vertical"
    android:padding="@dimen/dp_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:text="@string/tenanter_title_dialog"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/common_text_size_small" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_25"
            android:paddingStart="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_5"
            android:layout_gravity="right"
            android:src="@mipmap/icon_tenanter_close" />

    </LinearLayout>

    <include layout="@layout/include_view_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/touxiang" />


        <TextView
            android:id="@+id/tv_name_hint"
            style="@style/tenanter_des_text_hint"
            android:layout_toRightOf="@+id/iv_photo"
            android:text="@string/tenanter_des_name" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/tenanter_des_text"
            android:layout_toRightOf="@+id/tv_name_hint" />

        <TextView
            android:id="@+id/tv_gender_hint"
            style="@style/tenanter_des_text_hint"
            android:layout_below="@+id/tv_name_hint"
            android:layout_toRightOf="@+id/iv_photo"
            android:text="@string/tenanter_des_gender" />

        <TextView
            android:id="@+id/tv_gender"
            style="@style/tenanter_des_text"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/tv_gender_hint" />

        <TextView
            android:id="@+id/tv_phone_hint"
            style="@style/tenanter_des_text_hint"
            android:layout_below="@+id/tv_gender_hint"
            android:layout_toRightOf="@+id/iv_photo"
            android:text="@string/tenanter_des_phone" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/tenanter_des_text"
            android:layout_below="@+id/tv_gender_hint"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toRightOf="@+id/tv_gender_hint" />

