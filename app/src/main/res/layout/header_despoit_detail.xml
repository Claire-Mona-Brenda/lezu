<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_number_title"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_999999"
            android:id="@+id/tv_order_num_title"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/color_999999"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_order_num_title"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_order_number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_status"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/title_back"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/color_ffffff">
        <ImageView
            android:layout_width="@dimen/dp_65"
            android:layout_height="@dimen/dp_65"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/icon_room"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon_room"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:id="@+id/tv_address"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time"
            android:layout_below="@+id/tv_address"
            android:layout_toRightOf="@+id/icon_room"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lock_despoit"
            android:id="@+id/tv_despoit"
            android:textColor="@color/color_333333"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/tv_time"
            android:textSize="@dimen/common_text_size_bigest"
            android:layout_toRightOf="@+id/icon_room"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_despoit_money"
            android:textColor="@color/color_404143"
            android:layout_below="@+id/tv_time"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/sp_30"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_toRightOf="@+id/tv_despoit"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:background="@color/color_ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:textSize="@dimen/sp_15"
        android:text="@string/flow_card_record"
        android:layout_marginBottom="@dimen/dp_1"
        android:textColor="@color/color_404143"/>

</LinearLayout>