<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:layout_marginTop="@dimen/dp_8"
    android:paddingStart="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16"
    android:paddingTop="@dimen/dp_14"
    android:paddingBottom="@dimen/dp_11">
    <androidx.cardview.widget.CardView
        android:id="@+id/adapter_card_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dp_1"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">
        <ImageView
            android:id="@+id/adapter_icon_room"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_80"
            android:src="@mipmap/fangchan_jiazai"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/adapter_tv_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/adapter_card_img"
        android:layout_alignTop="@+id/adapter_card_img"
        android:layout_marginStart="@dimen/dp_16"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_black"
        android:textStyle="bold"
        android:typeface="sans"/>
    <TextView
        android:id="@+id/adapter_tv_room_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_tv_room_name"
        android:layout_alignStart="@+id/adapter_tv_room_name"
        android:layout_marginTop="@dimen/dp_3"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/color_000000" />
    <TextView
        android:id="@+id/adapter_tv_room_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adapter_tv_room_info"
        android:layout_alignStart="@+id/adapter_tv_room_info"
        android:layout_marginTop="@dimen/dp_6"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_ren"
        android:textStyle="bold"
        android:typeface="sans"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:padding="@dimen/dp_16"
        >
        <TextView
            android:id="@+id/tv_tips_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13"
            android:text="@string/start_rent_"/>
        <TextView
            android:id="@+id/adapter_tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_tips_start"
            android:layout_alignTop="@+id/tv_tips_start"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13"/>

        <TextView
            android:id="@+id/tv_tips_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tips_start"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13"
            android:text="@string/end_rent_"/>
        <TextView
            android:id="@+id/adapter_tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_tips_end"
            android:layout_alignTop="@+id/tv_tips_end"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_13"/>
        
        <TextView
            android:id="@+id/adapter_tv_cancel"
            android:layout_width="@dimen/dp_116"
            android:layout_height="@dimen/dp_32"
            android:gravity="center"
            android:background="@drawable/shape_white_more"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/text_black"
            android:text="@string/cancel_order"
            android:layout_alignParentEnd="true"
            />
        <ImageView
            android:id="@+id/adapter_img_cancel"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@mipmap/order_cancel"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
    </RelativeLayout>
</LinearLayout>