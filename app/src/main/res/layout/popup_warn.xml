<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/open_popup_background"
    >
    <RelativeLayout
        android:layout_width="@dimen/dp_400"
        android:layout_height="wrap_content"
        android:background="@drawable/open_popup_background"
        android:padding="@dimen/dp_5"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/pop_upload_tv_please"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_title"
            android:text="@string/please_text"
            android:textSize="@dimen/sp_20"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/dp_10"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/common_light_gray"
            android:layout_below="@+id/pop_upload_tv_please"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"/>
        <TextView
            android:id="@+id/pop_warn_tv_comtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pop_upload_tv_please"
            android:layout_margin="@dimen/dp_20"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/warn_short_rental_comtext"
            android:textColor="@color/color_000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pop_warn_tv_comtext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10">
            <Button
                android:id="@+id/pop_warn_btn_confirm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:text="@string/warn_confirm"
                android:textColor="@color/color_ffffff"
                android:background="@drawable/selector_login_btn"/>
            <Button
                android:id="@+id/pop_warn_btn_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/pop_warn_btn_confirm"
                android:layout_margin="@dimen/dp_5"
                android:text="@string/warn_cancel"
                android:textColor="@color/color_ffffff"
                android:background="@drawable/selector_login_btn"/>
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>