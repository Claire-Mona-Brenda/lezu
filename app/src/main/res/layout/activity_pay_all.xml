<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/style_bg_page">

    <include layout="@layout/include_title_text" />

    <RelativeLayout
        android:id="@+id/activity_pay_all_rl_xufei_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_pay_all_rl_xufei_1"
        android:background="@mipmap/xufei_bg2"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginTop="-8dp"
        android:paddingStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_32"
        android:paddingBottom="@dimen/dp_30">

        <TextView
            android:id="@+id/tv_choose_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/pay_choose_sever_type"
            android:textColor="@color/color_000000" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_choose_sever"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_below="@+id/tv_choose_tips"
            android:layout_marginTop="@dimen/dp_26" />


        <TextView
            android:id="@+id/tv_total_choose_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycle_choose_sever"
            android:layout_marginTop="@dimen/dp_23"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_15"
            android:text="@string/total"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/activity_pay_all_tv_total_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_total_choose_tips"
            android:layout_alignParentEnd="true"
            android:textColor="@color/text_org"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:typeface="sans"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_pay_all_rl_xufei_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lin_title"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginEnd="@dimen/dp_8"
        android:background="@mipmap/xufei_bg1">

        <TextView
            android:id="@+id/tv_install_pay_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_25"
            android:text="@string/install_pay"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/activity_pay_all_tv_install_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_install_pay_tips"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_23"
            android:text="¥"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/activity_pay_all_ll_install_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_install_pay_tips"
            android:layout_marginTop="@dimen/dp_14"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_23"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_install_code_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/install_pay_code"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/activity_pay_all_tv_install_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="end"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_arrow" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_discounts_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_pay_all_ll_install_code"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_23"
            android:text="@string/discounts"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/activity_pay_all_tv_discounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_discounts_tips"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_23"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_total_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_discounts_tips"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_23"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_15"
            android:text="@string/total"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/activity_pay_all_tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_total_tips"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_23"
            android:textColor="@color/text_org"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold"
            android:typeface="sans"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_pay_all_rl_total_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/activity_pay_all_btn_pay"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_44"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_14"
            android:background="@drawable/shape_button_main"
            android:text="@string/pay"
            android:textColor="@color/text_white"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:gravity="center"
            android:layout_toStartOf="@+id/activity_pay_all_btn_pay"
            android:layout_marginEnd="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_total"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/activity_pay_all_tv_total_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥150"
                android:textColor="@color/text_org"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                android:typeface="sans" />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>