<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/combined_shape"
    android:gravity="center_horizontal">
    <RelativeLayout
        android:id="@+id/popup_rl_pay_setting"
        style="@style/rl_setting_house_info">
        <ImageView
            android:id="@+id/popup_img_pay_setting"
            style="@style/img_setting_house_info"
            android:src="@mipmap/anzhuangfufei_icon"/>
        <TextView
            android:id="@+id/popup_tv_pay_setting"
            style="@style/textview_setting_house_info"
            android:text="@string/house_info_setting_paysetting"
            android:layout_toRightOf="@+id/popup_img_pay_setting"/>
        <View
            style="@style/view_setting_house_info"
            android:layout_toRightOf="@+id/popup_img_pay_setting"
            android:layout_alignBottom="@+id/popup_img_pay_setting"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/popup_rl_edit"
        style="@style/rl_setting_house_info">
        <ImageView
            android:id="@+id/popup_img_edit"
            style="@style/img_setting_house_info"
            android:src="@mipmap/bianjifangchan_icon"/>
        <TextView
            android:id="@+id/popup_tv_edit"
            style="@style/textview_setting_house_info"
            android:text="@string/house_info_setting_edit"
            android:layout_toRightOf="@+id/popup_img_edit"/>
        <View
            style="@style/view_setting_house_info"
            android:layout_toRightOf="@+id/popup_img_edit"
            android:layout_alignBottom="@+id/popup_img_edit"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/popup_rl_binddevice"
        style="@style/rl_setting_house_info">
