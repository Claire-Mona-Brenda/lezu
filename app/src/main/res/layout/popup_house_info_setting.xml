            android:layout_toRightOf="@+id/popup_img_gateway"
            android:layout_alignBottom="@+id/popup_img_gateway"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/popup_rl_open_manage"
        style="@style/rl_setting_house_info">
        <ImageView
            android:id="@+id/popup_img_open_manage"
            style="@style/img_setting_house_info"
            android:src="@mipmap/keypassword_icon"/>
        <TextView
            android:id="@+id/popup_tv_open_manage"
            style="@style/textview_setting_house_info"
            android:text="@string/house_info_setting_open_manage"
            android:layout_toRightOf="@+id/popup_img_open_manage"/>
        <View
            style="@style/view_setting_house_info"
            android:layout_toRightOf="@+id/popup_img_open_manage"
            android:layout_alignBottom="@+id/popup_img_open_manage"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/popup_rl_del"
        style="@style/rl_setting_house_info">
        <ImageView
            android:id="@+id/popup_img_del"
            style="@style/img_setting_house_info"
