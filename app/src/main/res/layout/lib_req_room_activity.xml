<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/style_bg_page"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/title_bg"

        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:background="@color/style_bg_page">
        <ImageView
            android:onClick="onClick"
            android:layout_alignParentLeft="true"
            android:id="@+id/back"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@mipmap/chevron"
            />
        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:padding="@dimen/dp_15"
            android:text="@string/apply_rent_house"
            android:textSize="@dimen/style_text_title"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/text_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_10"
            android:padding="@dimen/dp_15"
            android:text="@string/common_commit"
            android:textSize="@dimen/style_text_context"
            android:textColor="@color/text_black" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingRight="1dp">


            <RelativeLayout
                android:id="@+id/rl_choose_in"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="1dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="5"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="入住时间"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:id="@+id/chose1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:gravity="left"
                    android:minWidth="200dp"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@mipmap/right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_choose_out"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="1dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="5"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="退房时间"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:id="@+id/chose2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:gravity="left"
                    android:minWidth="200dp"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@mipmap/right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/group_chose3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textview3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="5"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="租金类型"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:id="@+id/chose3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/textview3"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请选择租金类型"
                    android:minWidth="200dp"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@mipmap/right" />

                <EditText
                    android:id="@+id/h_edit1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="39dp"
                    android:background="@null"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/lib_house_edit_text" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/textview6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="5"
                    android:inputType="numberDecimal"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="房租"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <EditText
                    android:id="@+id/h_edit3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="3dp"
                    android:background="@null"
                    android:digits="1234567890."
                    android:gravity="left"
                    android:hint="请输入和房东协商的租金"
                    android:inputType="text"
                    android:minWidth="200dp"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:id="@+id/lx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="/月" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textview4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/chose4"
                    android:layout_alignBottom="@+id/chose4"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="7"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="是否线上交租"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:id="@+id/chose4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/textview4"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请选择交租方式"
                    android:minWidth="200dp"
                    android:textSize="@dimen/lib_house_edit_text"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@mipmap/right"
                    android:visibility="invisible" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textview5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="5"
                    android:text="房锁流量费"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:id="@+id/chose5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:gravity="left"
                    android:minWidth="200dp"
                    android:text="按年缴纳"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@mipmap/right" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="5"
                    android:text="房锁押金"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="5"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="房租押金"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <EditText
                    android:id="@+id/h_edit2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请输入和房东协商的押金"
                    android:inputType="text"
                    android:minWidth="200dp"
                    android:textSize="@dimen/lib_house_edit_text" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@android:color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="7"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="姓名"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <EditText
                    android:id="@+id/h_edit4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/text18"
                    android:background="@null"
                    android:hint=""
                    android:inputType="text"

                    android:textSize="@dimen/lib_house_edit_text" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="1dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/text18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="7"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="身份证号"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <EditText
                    android:id="@+id/h_edit7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/text18"
                    android:background="@null"
                    android:hint=""
                    android:inputType="text"

                    android:textSize="@dimen/lib_house_edit_text" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="0"
                    android:ems="7"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="手机号码"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <EditText
                    android:id="@+id/h_edit5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/text18"
                    android:layout_weight="2"
                    android:background="@null"
                    android:hint="手机号码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:id="@+id/yzm"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:padding="@dimen/dp_10"
                    android:text="获取验证码"
                    android:textColor="@color/common_title" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="1dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/textview16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="7"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="短信验证码"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <EditText
                    android:id="@+id/h_edit6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/textview16"
                    android:background="@null"
                    android:hint="请输入短信验证码"
                    android:inputType="number"
                    android:textSize="@dimen/lib_house_edit_text" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="5"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="水费"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text="1元/吨"
                    android:textColor="@color/color_000000"

                    android:textSize="@dimen/lib_house_edit_text" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="5"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="电费"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:inputType="text"
                    android:text="1元/度"
                    android:textColor="@color/color_000000"

                    android:textSize="@dimen/lib_house_edit_text" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="7"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="物业管理费"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text="10元/月"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/lib_house_edit_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="7"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="垃圾处理费"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text=""
                    android:textColor="@color/color_000000"

                    android:textSize="@dimen/lib_house_edit_text" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:ems="7"
                    android:paddingLeft="@dimen/dp_10"
                    android:text="网费"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/lib_house_edit_text" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/text18"
                    android:background="@null"
                    android:text="房东赠送"
                    android:textColor="@color/color_000000"

                    android:textSize="@dimen/lib_house_edit_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_100">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_20"
                    android:text="@string/remark"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/style_text_context" />

                <EditText
                    android:id="@+id/h_edit8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_20"
                    android:background="#f0f2f1"
                    android:gravity="left"
                    android:inputType="text"
                    android:minHeight="@dimen/dp_100"
                    android:padding="@dimen/dp_10"
                    android:textSize="@dimen/lib_house_edit_text" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="1dp"
                android:background="@android:color/white"
                android:visibility="gone">


                <Button
                    android:id="@+id/button3"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/info"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_button"
                    android:gravity="center"
                    android:text="申请租房"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/lib_house_edit_text"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>