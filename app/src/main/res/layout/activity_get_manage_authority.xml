<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/style_bg_page">
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_title_height"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/chevron" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_17"
            android:text="@string/common_back"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:paddingTop="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_30"
        android:paddingStart="@dimen/dp_32"
        android:paddingEnd="@dimen/dp_32">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_title_big"
            android:text="@string/get_manage_pwd_authority" />
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_context"
            android:text="@string/get_manage_pwd_authority_tips"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/tv_title"/>
        <ImageView
            android:id="@+id/img_icon_phone"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/login_phone_icon"
            android:layout_below="@+id/tv_tips"
            android:layout_marginTop="@dimen/dp_45"/>
        <TextView
            android:id="@+id/activity_get_manage_pwd_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/style_text_title"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_alignTop="@+id/img_icon_phone"
            android:layout_toEndOf="@+id/img_icon_phone"/>
        <TextView
            android:id="@+id/activity_get_manage_pwd_tv_send_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/selected_text_enable_color_black_org"
            android:textSize="@dimen/style_text_title"
            android:text="@string/send_code"
            android:layout_alignTop="@+id/activity_get_manage_pwd_tv_phone"
            android:layout_alignParentEnd="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/style_line"
            android:layout_below="@+id/img_icon_phone"
            android:layout_marginTop="@dimen/dp_10"/>

        <ImageView
            android:id="@+id/img_icon_msg"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/login_mail_icon"
            android:layout_below="@+id/img_icon_phone"
            android:layout_marginTop="@dimen/dp_40"/>
        <EditText
            android:id="@+id/activity_get_manage_pwd_edt_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/img_icon_msg"
            android:layout_alignTop="@+id/img_icon_msg"
            android:hint="@string/regist_verfication_num_hint"
            android:textColorHint="@color/text_gray"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_title"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/style_line"
            android:layout_below="@+id/img_icon_msg"
            android:layout_marginTop="@dimen/dp_10"/>
        <Button
            android:id="@+id/activity_get_manage_pwd_btn_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@drawable/shape_button"
            android:layout_below="@+id/img_icon_msg"
            android:layout_marginTop="@dimen/dp_56"
            android:textSize="@dimen/style_text_title"
            android:textColor="@color/color_ffffff"
            android:text="@string/common_sure"/>
    </RelativeLayout>
</LinearLayout>