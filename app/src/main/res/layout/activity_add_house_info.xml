<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_title_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/style_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_26"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/add_house_flow_address"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/add_house_flow_info"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/add_house_flow_introduce"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/add_house_flow_finish"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/text_blue" />

        <View
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_9"
            android:background="@drawable/shape_circle_blue" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:background="@color/text_blue" />

        <View
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_9"
            android:background="@drawable/shape_circle_blue" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/text_blue" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/text_gray" />

        <View
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_9"
            android:background="@drawable/shape_circle_gray" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:background="@color/text_gray" />

        <View
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_9"
            android:background="@drawable/shape_circle_gray" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_48"
        android:text="@string/add_house_fill_info"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_15"
        android:text="@string/add_house_fill_info_tips"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_24"
        android:background="@color/style_line" />

    <LinearLayout
        android:id="@+id/activity_add_house_info_ll_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_55"
            android:gravity="center_vertical"
            android:text="@string/add_house_house_info_name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:typeface="sans" />

        <EditText
            android:id="@+id/activity_add_house_info_edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_11"
            android:background="@null"
            android:hint="@string/add_house_house_info_name_tips"
            android:maxLength="30"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/style_line" />

    <LinearLayout
        android:id="@+id/activity_add_house_info_ll_house_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_55"
            android:gravity="center_vertical"
            android:text="@string/add_house_house_info_house_type"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/activity_add_house_info_tv_house_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_28"
            android:src="@mipmap/icon_arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/style_line" />

    <LinearLayout
        android:id="@+id/activity_add_house_info_ll_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:text="@string/add_house_house_area"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:typeface="sans" />

        <EditText
            android:id="@+id/activity_add_house_info_edt_area"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_11"
            android:background="@null"
            android:hint="@string/add_house_edit_area"
            android:inputType="number"
            android:digits="0123456789."
            android:maxLength="6"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="@string/unit_m2_1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/style_line" />

    <LinearLayout
        android:id="@+id/activity_add_house_info_ll_floor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:text="@string/add_house_house_floor"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:typeface="sans" />

        <EditText
            android:id="@+id/activity_add_house_info_edt_floor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_11"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/add_house_edit_floor"
            android:digits="-Bb0123456789"
            android:maxLength="4"
            android:inputType="number"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:gravity="center_vertical"
            android:text="@string/add_house_house_floor_sum"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:typeface="sans" />

        <EditText
            android:id="@+id/activity_add_house_info_edt_floor_sum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_11"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/add_house_edit_floor_sum"
            android:inputType="number"
            android:maxLength="4"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/style_line" />
    <RelativeLayout
        android:id="@+id/activity_add_house_info_rl_confit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_24">
        <TextView
            android:id="@+id/tv_contif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:text="@string/add_house_confit"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:typeface="sans" />
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@mipmap/icon_arrow"
            android:layout_marginEnd="@dimen/dp_28"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tv_contif"/>
        <TextView
            android:id="@+id/activity_add_house_info_tv_confit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_below="@+id/tv_contif"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text_gray"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/style_line" />
</LinearLayout>