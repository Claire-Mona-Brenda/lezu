            style="@style/view_setting_house_info"
            android:layout_toRightOf="@+id/popup_img_del"
            android:layout_alignBottom="@+id/popup_img_del"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/popup_rl_pwd"
        style="@style/rl_setting_house_info">
        <ImageView
            android:id="@+id/popup_img_pwd"
            style="@style/img_setting_house_info"
            android:src="@mipmap/lingshimima_icon"/>
        <TextView
            android:id="@+id/popup_tv_pwd"
            style="@style/textview_setting_house_info"
            android:text="@string/house_info_setting_temporary_pwd"
            android:layout_toRightOf="@+id/popup_img_pwd"/>

    </RelativeLayout>

</LinearLayout>