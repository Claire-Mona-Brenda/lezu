<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_ffffff">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_item_rentout_remark"
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_999999"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="备注" />
    <TextView
        android:id="@+id/tv_rent_out_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="income"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_000000"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"/>
    <TextView
        android:id="@+id/tv_rent_out_sumincome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sum_record"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_13"
        android:layout_toLeftOf="@+id/tv_rent_out_income"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"/>
</RelativeLayout>
    <TextView
        android:id="@+id/tv_item_rentout_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_999999"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_below="@+id/tv_item_rentout_remark"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="来源" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_item_rentout_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_999999"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="时间" />
    <TextView
        android:id="@+id/tv_rent_out_income_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="balance"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/color_000000"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"/>
    <TextView
        android:id="@+id/tv_rent_out_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/balance"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_13"
        android:layout_toLeftOf="@+id/tv_rent_out_income_balance"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"/>
    </RelativeLayout>
</LinearLayout>