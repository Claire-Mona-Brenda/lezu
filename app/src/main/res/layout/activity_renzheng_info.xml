<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/style_bg_card_1"
    android:orientation="vertical">

    <include layout="@layout/include_title_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_44"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/text_org"
        android:text="@string/info_renzheng"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_16"
        android:textStyle="bold"
        android:typeface="sans"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        android:background="@color/color_ffffff"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_18"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"
            android:text="@string/name"/>
        <TextView
            android:id="@+id/activity_renzheng_info_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        android:background="@color/color_ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_18"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"
            android:text="@string/sex"/>
        <TextView
            android:id="@+id/activity_renzheng_info_tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        android:background="@color/color_ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_18"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"
            android:text="@string/idcard_mobile"/>
        <TextView
            android:id="@+id/activity_renzheng_info_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        android:background="@color/color_ffffff"
        android:layout_marginTop="@dimen/dp_1"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_18"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"
            android:text="@string/idcard_date"/>
        <TextView
            android:id="@+id/activity_renzheng_info_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

</LinearLayout>