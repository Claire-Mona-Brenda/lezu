<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    tools:context="com.konka.renting.landlord.gateway.BindGatewayActivity">

    <include layout="@layout/include_title_text"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_16"
        android:text="@string/please_input_gateway_code"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_16"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16">
        <EditText
            android:id="@+id/edit_serial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/sp_16"
            android:hint="@string/please_input_gateway_code_tips"
            android:background="@null"/>
        <ImageView
            android:id="@+id/activity_bind_img_scan"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_33"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/device_icon_scan" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/style_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_16"
        android:text="@string/gateway_info_pwd"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_16"/>
    <EditText
        android:id="@+id/edit_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:textSize="@dimen/sp_16"
        android:hint="@string/device_gateway_password_hint"
        android:background="@null"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/style_line" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height"
        android:layout_marginTop="@dimen/dp_55"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/shape_button"
        android:textColor="@android:color/white"
        android:textSize="@dimen/common_text_size_middle"
        android:text="@string/device_gateway_sure"/>
</LinearLayout>
