<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_number_title"
        android:id="@+id/tv_message_title"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/style_text_title"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"/>
    <View
        android:id="@+id/adapter_message_view_point"
        android:layout_width="@dimen/dp_10"
        android:layout_height="@dimen/dp_10"
        android:background="@drawable/shape_ren_point"
        android:layout_alignRight="@+id/tv_message_title"
        android:layout_alignTop="@+id/tv_message_title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:id="@+id/tv_message_time"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/style_text_context"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_10" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="content"
        android:id="@+id/tv_message_content"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_13"
        android:layout_below="@+id/tv_message_title"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_10"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:maxLines="1"/>
</RelativeLayout>