<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/open_popup_background"
    >
    <RelativeLayout
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:background="@drawable/open_popup_background"
        android:padding="@dimen/dp_5"
        android:layout_centerInParent="true">
    <TextView
        android:id="@+id/pop_upload_tv_please"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/common_title"
        android:text="@string/please_text"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dp_10"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/common_light_gray"
        android:layout_below="@+id/pop_upload_tv_please"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>
    <TextView
        android:id="@+id/pop_upload_tv_comtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pop_upload_tv_please"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="@string/please_comtext"
        android:textColor="@color/color_000000"/>
    <Button
        android:id="@+id/pop_upload_btn"
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pop_upload_tv_comtext"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_10"
        android:text="@string/please_upload"
        android:textColor="@color/color_ffffff"
        android:background="@drawable/selector_login_btn"/>
    </RelativeLayout>

</RelativeLayout>