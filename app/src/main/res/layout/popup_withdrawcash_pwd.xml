<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_user"
    android:gravity="center_horizontal">
<TextView
    android:id="@+id/pop_withdrawcash_pwd_tv_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/text_black"
    android:textSize="@dimen/sp_18"
    android:text="@string/please_input_pwd_number"
    android:layout_marginTop="@dimen/dp_45"/>
    <com.konka.renting.widget.PasswordView
        android:id="@+id/pop_withdrawcash_pwd_pv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:mode="rect"
        android:layout_marginTop="@dimen/dp_56"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_30"
        app:passwordLength="6"
        app:cipherEnable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
    <TextView
        android:id="@+id/pop_withdrawcash_pwd_tv_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_blue"
        android:text="@string/login_forget"
        android:layout_marginEnd="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_gravity="end"
        android:enabled="false"
        android:padding="@dimen/dp_5"
        android:visibility="invisible"
        android:layout_marginBottom="@dimen/dp_65"/>
</LinearLayout>