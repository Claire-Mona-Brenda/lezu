            android:id="@+id/popup_img_binddevice"
            style="@style/img_setting_house_info"
            android:src="@mipmap/bangdingshebei_icon"/>
        <TextView
            android:id="@+id/popup_tv_binddevice"
            style="@style/textview_setting_house_info"
            android:text="@string/house_info_setting_device_list"
            android:layout_toRightOf="@+id/popup_img_binddevice"/>
        <View
            style="@style/view_setting_house_info"
            android:layout_toRightOf="@+id/popup_img_binddevice"
            android:layout_alignBottom="@+id/popup_img_binddevice"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/popup_rl_gateway"
        style="@style/rl_setting_house_info">
