<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    android:id="@+id/lin_cer"
    tools:context="com.konka.renting.landlord.user.userinfo.CertificationActivity">

    <include layout="@layout/include_title_text"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/style_line"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_photo_camera"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_35"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_14"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_35"
        android:layout_marginEnd="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_40"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_idcard_head"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/id_card_face"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/idcard_head"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iv_idcard_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/id_card_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/idcard_national_emblem"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                android:typeface="sans"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_idcard_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_40"
            android:text="@string/please_confirm"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginEnd="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@color/color_ffffff"
                android:focusable="false"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginEnd="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/style_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginEnd="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_13">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/idcard"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_idcard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@color/color_ffffff"
                android:focusable="false"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginStart="@dimen/dp_35"
            android:layout_marginEnd="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/style_line" />

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:id="@+id/btn_commit"
        android:text="@string/common_sure"
        android:textColor="@color/color_ffffff"
        android:background="@drawable/shape_button"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_100"/>
</LinearLayout>
