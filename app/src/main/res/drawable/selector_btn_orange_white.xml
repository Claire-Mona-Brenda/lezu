<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_selected="true" android:state_enabled="true">
    <shape >
        <solid android:color="@color/style_main"/>
        <stroke android:color="@color/style_main" android:width="@dimen/dp_1"/>
        <corners android:radius="@dimen/dp_3"/>
    </shape>
</item>
    <item android:state_selected="false" android:state_enabled="true">
        <shape >
            <solid android:color="@color/color_ffffff"/>
            <stroke android:color="@color/text_gray" android:width="@dimen/dp_1"/>
            <corners android:radius="@dimen/dp_3"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape >
            <solid android:color="@color/style_line"/>
            <stroke android:color="@color/style_line" android:width="@dimen/dp_1"/>
            <corners android:radius="@dimen/dp_3"/>
        </shape>
    </item>
</selector>