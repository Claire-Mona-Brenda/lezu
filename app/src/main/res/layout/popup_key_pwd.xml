<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_20"
    android:background="@drawable/shape_user"
    android:gravity="center_horizontal">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/open_key_pwd"
    android:textStyle="bold"
    android:textColor="@color/text_black"
    android:textSize="@dimen/style_text_title_more_big"
    android:layout_marginTop="@dimen/dp_30"/>
    <TextView
        android:id="@+id/tv_key_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.5"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_30"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_22"
        android:background="@drawable/shape_button"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_key_pwd_tips"
        android:textSize="@dimen/style_text_context"
        android:textColor="@color/text_gray"
        android:layout_marginTop="@dimen/dp_20"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_30"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tips_manage_pwd_fail"
            android:textSize="@dimen/style_text_context"
            android:textColor="@color/text_gray"
            />
        <TextView
            android:id="@+id/tv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pwd_restart"
            android:textSize="@dimen/style_text_context"
            android:textColor="@color/text_blue"
            android:padding="@dimen/dp_10"/>
    </LinearLayout>
</LinearLayout>