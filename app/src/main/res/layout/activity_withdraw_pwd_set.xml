<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/include_title_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/style_line" />

    <TextView
        android:id="@+id/activity_withdraw_set_pwd_tv_tips_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:text="@string/setting_pwd_number"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/activity_withdraw_set_pwd_tv_tips_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_input_pwd_number"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_18" />

    <com.konka.renting.widget.PasswordView
        android:id="@+id/activity_withdraw_set_pwd_pv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_44"
        app:cipherEnable="true"
        app:mode="rect"
        app:passwordLength="6" />

    <Button
        android:id="@+id/activity_withdraw_set_pwd_btn_next"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_70"
        android:background="@drawable/shape_main"
        android:text="@string/common_next"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_16" />

</LinearLayout>