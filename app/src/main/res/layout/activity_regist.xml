<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    tools:context="com.konka.renting.login.RegistActivity">

    <include layout="@layout/include_title_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff"
        android:layout_marginTop="@dimen/dp_2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@mipmap/login_phone_icon" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:hint="@string/login_phone_hint"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/text_black"
                android:textSize="@dimen/common_text_size_small" />

            <Button
                android:id="@+id/btn_get_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@null"
                android:text="@string/regist_get_verfication_num"
                android:textColor="@color/selected_text_enable_color_black_org"
                android:textSize="@dimen/common_text_size_small" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@color/common_drivder_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@mipmap/login_mail_icon" />


            <EditText
                android:id="@+id/edit_num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:hint="@string/regist_verfication_num_hint"
                android:inputType="number"
                android:textColor="@color/text_black"
                android:textSize="@dimen/common_text_size_small" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@color/common_drivder_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@mipmap/login_lock_icon" />


            <EditText
                android:id="@+id/edit_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:maxLength="12"
                android:hint="@string/regist_password_hint_new"
                android:digits="@string/login_pwd_input"
                android:inputType="textPassword"
                android:textColor="@color/text_black"
                android:textSize="@dimen/common_text_size_small" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@color/common_drivder_line" />
        <Button
            android:id="@+id/btn_commit"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/selector_btn_enable_org_tran"
            android:text="@string/login_regist"
            android:textColor="@android:color/white"
            android:textSize="@dimen/common_text_size_middle" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/checkbox_agree"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/selector_rbtn_check_agree"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/regist_read_and_agree"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/style_text_tips" />

            <TextView
                android:id="@+id/tv_sever_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:text="@string/regist_sever_protocol"
                android:textColor="@color/text_ren"
                android:textSize="@dimen/style_text_tips" />
        </LinearLayout>



    </LinearLayout>
</LinearLayout>
