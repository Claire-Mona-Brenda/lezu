<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<TextView
    android:id="@+id/adapter_collection_tv_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:textColor="@color/text_black"
    android:textSize="@dimen/style_text_context"
    android:text="南山区高新园康佳研发大楼18楼1808号"
    android:background="@color/style_bg_card_2"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/style_line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_20"
        android:background="@color/style_bg_card_2"
        android:layout_marginBottom="@dimen/dp_10">
        <TextView
            android:id="@+id/adapter_collection_tv_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/style_text_context"
            android:textColor="@color/text_black"
            android:text="@string/collection_tips"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/adapter_collection_tv_date"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/adapter_collection_tv_tips"
            android:background="@drawable/selector_btn_shurukuang"
            android:enabled="true"
            android:padding="@dimen/dp_10"
            android:text="28号"
            android:textColor="@color/selected_text_color_enable_black_gray"
            android:textSize="@dimen/style_text_context" />

        <TextView
            android:id="@+id/adapter_collection_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_btn_orange_white"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/collection_open"
            android:textColor="@color/selector_text_color_white_black"
            android:textSize="@dimen/style_text_context"
            android:thumb="@null" />
    </RelativeLayout>
</LinearLayout>