<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/color_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_1">
        <TextView
            android:id="@+id/adapter_houselist_tv_id_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="@string/house_id"
            android:textSize="@dimen/style_text_tips"
            android:textColor="@color/text_gray"/>
        <TextView
            android:id="@+id/adapter_houselist_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_3"
            android:layout_toEndOf="@+id/adapter_houselist_tv_id_left"
            android:textSize="@dimen/style_text_tips"
            android:textColor="@color/text_gray"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_tips"/>
        <TextView
            android:id="@+id/adapter_houselist_tv_rent_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/status"
            android:textColor="@color/lib_landlord_house"
            android:textSize="@dimen/style_text_tips"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:background="@color/color_ffffff">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_6"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_house"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card_img"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_toEndOf="@+id/card_img"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_title"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/adapter_house_tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:id="@+id/adapter_house_ll_sever_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adapter_house_tv_info"
            android:layout_alignStart="@+id/tv_name"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/dis_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/house_sever_end_time"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/adapter_house_tv_endtime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/house_sever_end_time_emty"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/adapter_house_tv_pay"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_22"
                android:background="@drawable/shape_button_black_c"
                android:gravity="center"
                android:text="@string/pay_to"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_12"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/adapter_house_ll_rent_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adapter_house_ll_sever_time"
            android:layout_alignStart="@+id/tv_name"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/adapter_house_tv_rent_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_ren"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/adapter_house_tv_rent_money_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/public_house_pay_unit_mon"
                android:textColor="@color/text_ren"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/adapter_houselist_ll_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:paddingEnd="@dimen/dp_10"
        android:gravity="center_vertical|end"
        android:background="@color/color_ffffff">
        <LinearLayout
            android:id="@+id/ll_create_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/create_order"
                style="@style/textview_btn_house_list"
                android:text="@string/house_creat_order" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_open"
                style="@style/textview_btn_house_list"
                android:text="@string/tenant_main_opendoor"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_bind"
                style="@style/textview_btn_house_list"
                android:text="@string/bind_dev"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_install"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_install"
                style="@style/textview_btn_house_list"
                android:text="@string/pay_setting"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/adapter_houselist_ll_sever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/adapter_houselist_tv_sever"
                style="@style/textview_btn_house_list"
                android:text="@string/sever_pay_money"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_start_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/start_end"
                style="@style/textview_btn_house_list"
                android:text="@string/start_to_rent"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>