<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/style_bg_page"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/include_title_white"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingRight="1dp">

            <RelativeLayout
                style="@style/rl_add_house">
                <TextView
                    style="@style/textview_add_house_xing"
                    android:id="@+id/text_xing_0"
                    android:text="*" />
                <TextView
                    style="@style/textview_add_house"
                    android:id="@+id/text1"
                    android:text="@string/add_house_house_name"
                    android:layout_toRightOf="@+id/text_xing_0"/>

                <EditText
                    style="@style/editview_add_house"
                    android:hint="@string/add_house_edit_name"
                    android:id="@+id/activity_addHouse_edit_name"
                    android:layout_toRightOf="@id/text1"
                    android:inputType="text"
                    android:maxLength="30"/>


            </RelativeLayout>



            <RelativeLayout
                style="@style/rl_add_house">
                <TextView
                    style="@style/textview_add_house_xing"
                    android:id="@+id/text_xing_1"
                    android:text="*" />
                <TextView
                    style="@style/textview_add_house"
                    android:id="@+id/text2"
                    android:text="@string/add_house_choose_location"
                    android:layout_toRightOf="@+id/text_xing_1"/>

                <TextView
                    android:layout_marginRight="20dp"
                    android:hint="@string/add_house_choose_location_tips"
                    android:id="@+id/activity_addHouse_tv_address"
                    style="@style/editview_add_house"
                    android:layout_toRightOf="@id/text2" />

                <TextView
                    android:layout_centerVertical="true"
                    android:background="@mipmap/right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                style="@style/rl_add_house">
                <TextView
                    style="@style/textview_add_house_xing"
                    android:id="@+id/text_xing_2"
                    android:text="*" />
                <TextView
                    style="@style/textview_add_house"
                    android:id="@+id/text3"
                    android:text="@string/add_house_choose_real_location"
                    android:layout_toRightOf="@+id/text_xing_2"/>

                <EditText
                    android:hint="@string/add_house_choose_real_location_tips"
                    android:id="@+id/activity_addHouse_edit_address_more"
                    style="@style/editview_add_house"
                    android:layout_toRightOf="@id/text3"
                    android:inputType="text"
                    android:maxLength="30"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    style="@style/rl_add_house"
                    android:layout_weight="1">
                    <TextView
                        style="@style/textview_add_house_xing"
                        android:id="@+id/text_xing_3"
                        android:text="*" />
                    <TextView
                        android:id="@+id/text4"
                        style="@style/textview_add_house"
                        android:ems="4"
                        android:text="@string/add_house_house_floor"
                        android:layout_toRightOf="@+id/text_xing_3"/>

                    <EditText
                        android:id="@+id/activity_addHouse_edit_floor"
                        style="@style/editview_add_house"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/text4"
                        android:digits="Bb-0123456789"
                        android:hint="@string/add_house_edit_floor"
                        android:maxLength="4"
                        android:inputType="number" />


                </RelativeLayout>

                <RelativeLayout
                    style="@style/rl_add_house"
                    android:layout_weight="1">
                    <TextView
                        style="@style/textview_add_house_xing"
                        android:id="@+id/text_xing_4"
                        android:text="*" />
                    <TextView
                        android:id="@+id/text7"
                        style="@style/textview_add_house"
                        android:ems="5"
                        android:text="@string/add_house_house_floor_sum"
                        android:layout_toRightOf="@+id/text_xing_4"/>

                    <EditText
                        android:hint="@string/add_house_edit_floor_sum"
                        android:id="@+id/activity_addHouse_edit_floor_sum"
                        style="@style/editview_add_house"
                        android:layout_toRightOf="@id/text7"
                        android:inputType="number"
                        android:maxLength="4"
                        android:digits="0123456789" />


                </RelativeLayout>
            </LinearLayout>





            <RelativeLayout
                style="@style/rl_add_house"
                android:layout_marginTop="@dimen/dp_5">
                <TextView
                    style="@style/textview_add_house_xing"
                    android:id="@+id/text_xing_5"
                    android:text="*" />
                <TextView
                    android:id="@+id/activity_addHouse_tv_type_left"
                    style="@style/textview_add_house"
                    android:text="@string/add_house_house_type"
                    android:layout_toRightOf="@+id/text_xing_5"
                    />

                <TextView
                    android:id="@+id/activity_addHouse_tv_type"
                    style="@style/editview_add_house"
                    android:hint="@string/add_house_edit_type"
                    android:layout_toRightOf="@+id/activity_addHouse_tv_type_left"/>
                <TextView
                    android:layout_centerVertical="true"
                    android:background="@mipmap/right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    />
            </RelativeLayout>



            <RelativeLayout
                style="@style/rl_add_house">
                <TextView
                    style="@style/textview_add_house_xing"
                    android:id="@+id/text_xing_6"
                    android:text="*" />
                <TextView
                    style="@style/textview_add_house"
                    android:id="@+id/text19"
                    android:text="@string/add_house_house_area"
                    android:layout_toRightOf="@+id/text_xing_6"/>

                <EditText
                    style="@style/editview_add_house"
                    android:hint="@string/add_house_edit_area"
                    android:id="@+id/activity_addHouse_edit_area"
                    android:layout_toRightOf="@id/text19"
                    android:inputType="number"
                    android:digits="0123456789."
                    android:maxLength="6"/>


            </RelativeLayout>
