<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/main_bg_gray"
    android:id="@+id/re_order">

    <include layout="@layout/include_title_text"
        android:id="@+id/title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_1"
        android:layout_above="@+id/re_confirm"
        android:layout_below="@+id/title">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <include layout="@layout/include_tenant_order_detail_header"/>
            <include layout="@layout/layout_short_order_detail_item" />
            <include layout="@layout/layout_tenant_order_detail_item" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@color/color_ffffff"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/re_confirm"
        android:gravity="right|center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/renter_apply_to_end"
            android:visibility="gone"
            android:background="@drawable/shape_stroke_white"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/tv_apply_check_out"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/renter_cancel_apply"
            android:visibility="gone"
            android:background="@drawable/shape_stroke_white"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/tv_cancel_apply"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rent_cancle_to_end"
            android:visibility="gone"
            android:background="@drawable/shape_stroke_white"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/tv_cancel_check_out"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/public_joint_rent"
            android:visibility="gone"
            android:background="@drawable/shape_stroke_white"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/tv_public_joint_rent"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancle_joint_rent"
            android:visibility="gone"
            android:background="@drawable/shape_stroke_white"
            android:textColor="@color/color_333333"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:id="@+id/tv_cancel_joint_rent"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"/>

    </LinearLayout>
</RelativeLayout>
