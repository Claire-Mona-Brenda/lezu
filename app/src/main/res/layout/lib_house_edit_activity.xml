            <RelativeLayout
                style="@style/rl_add_house"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_confit"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="@string/add_house_house_confit"
                    android:textSize="@dimen/style_text_context"
                    android:textColor="@color/text_black"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/activity_editHouse_recylerview_Config"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_confit"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:visibility="visible"/>

            </RelativeLayout>

            <RelativeLayout
                style="@style/rl_add_house"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_introduce"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="@string/add_house_house_introduce"
                    android:textSize="@dimen/style_text_context"
                    android:textColor="@color/text_black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_100"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:id="@+id/activity_addHouse_edit_introduce"
                    android:hint="@string/add_house_edit_introduce"
                    android:textSize="@dimen/style_text_tips"
                    android:textColor="@color/text_black"
                    android:padding="@dimen/dp_10"
                    android:gravity="left"
                    android:layout_below="@+id/tv_introduce"
                    android:background="@drawable/shape_button_gray"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="13dp">
                <TextView
                    style="@style/textview_add_house_xing"
                    android:id="@+id/text_xing_8"
                    android:text="*" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_xing_8"
                    android:text="@string/add_house_house_pic"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/style_text_context"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <com.konka.renting.landlord.house.widget.PicRecordWidget
                android:id="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.konka.renting.landlord.house.widget.PicRecordWidget>

            <RelativeLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="1dp">
                <TextView
                    android:textSize="@dimen/style_text_tips"
                    android:textColor="@color/text_black"
                    android:paddingTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:id="@+id/info"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:enabled="false"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_below="@+id/info"
                    android:layout_centerInParent="true"
                    android:id="@+id/submit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_btn_enable_gray_org"
                    android:text="@string/add_house_house_submit"
                    android:textSize="@dimen/style_text_context"
                    android:textColor="@color/color_ffffff"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>