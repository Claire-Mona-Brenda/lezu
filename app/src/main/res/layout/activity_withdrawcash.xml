<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.konka.renting.landlord.user.withdrawcash.WithdrawcashActivity">

    <include layout="@layout/include_title_text" />

    <ImageView
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:src="@mipmap/icon_deposit"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_income"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_15"/>
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/money"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/common_text_size_bigest"
        android:textColor="@color/color_000000"
        android:layout_marginTop="@dimen/dp_10"/>
    <Button
        android:id="@+id/btn_withdraw"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="@string/withdraw"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/sp_15"
        android:background="@drawable/shape_button"/>
</LinearLayout>
