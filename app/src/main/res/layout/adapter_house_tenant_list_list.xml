<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/style_bg_card_2">
    <TextView
        android:id="@+id/adapter_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:text="租客1"
        android:textSize="@dimen/style_text_context"
        android:textColor="@color/text_black"/>
    <TextView
        android:id="@+id/adapter_tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_5"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/adapter_tv_name"
        android:text="(13712345678)"
        android:textSize="@dimen/style_text_context"
        android:textColor="@color/text_black"/>
    <TextView
        android:id="@+id/adapter_tv_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_20"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:textColor="@color/text_black"
        android:textSize="@dimen/style_text_context"
        android:text="@string/tenanter_call_ta"
        android:background="@drawable/shape_button_gray"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/adapter_tv_name"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@color/style_line"/>
</RelativeLayout>