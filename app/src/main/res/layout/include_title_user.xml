<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_title_height"
    android:background="@color/style_bg_card_1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        style="@style/common_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:text="@string/main_user" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="28dp"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@mipmap/icon_back"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/common_margin"
        android:text=""
        android:textColor="@drawable/sel_title_right"
        android:textSize="@dimen/common_text_size_middle"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/icon_user_setting"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:src="@mipmap/icon_setting"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="@dimen/dp_20"
        android:visibility="gone"/>

</FrameLayout>