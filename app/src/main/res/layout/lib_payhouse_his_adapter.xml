<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"

    android:orientation="vertical"
    >


    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="1dp">

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/xh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="TextView" />

        <TextView
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="TextView"
            android:textColor="@color/lib_landlord_house" />
    </RelativeLayout>

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:id="@+id/img_house"
            android:scaleType="centerCrop"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="TextView" />

                <TextView
                    android:layout_marginRight="5dp"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="TextView"
                    android:textColor="@color/lib_landlord_house" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/adress"
                    android:textSize="10sp"
                    android:id="@+id/dis_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="租期" />
                <TextView
                    android:textColor="@color/common_title"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/dis_time"
                    android:textSize="10sp"
                    android:id="@+id/data_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="租期" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


<FrameLayout
    android:layout_marginTop="1dp"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <LinearLayout
        android:layout_gravity="right|center_vertical"
        android:id="@+id/btn_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:visibility="gone"
            android:layout_marginRight="8dp"
            android:id="@+id/jzfs"
            android:background="@drawable/shape_white"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="交租方式"
            android:textColor="@android:color/black" />
        <Button
            android:visibility="gone"
            android:layout_marginRight="8dp"
            android:id="@+id/sqtf"
            android:background="@drawable/shape_white"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="申请退房"
            android:textColor="@android:color/black" />
        <Button
            android:layout_marginRight="8dp"
            android:id="@+id/cancel"
            android:background="@drawable/shape_white"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="取消申请"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/connect"
            android:background="@android:color/white"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="联系房东"
            android:textColor="@android:color/black" />
    </LinearLayout>
</FrameLayout>
</LinearLayout>

