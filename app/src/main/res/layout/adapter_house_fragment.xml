<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_4"
    android:layout_marginBottom="@dimen/dp_4"
    android:background="@drawable/shape_user"
    android:elevation="@dimen/dp_5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_20">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_house"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/card_img"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_toEndOf="@+id/card_img"
            android:textColor="@color/text_black"
            android:textSize="@dimen/style_text_title"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/adapter_house_tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_alignStart="@+id/tv_name"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:id="@+id/adapter_house_ll_sever_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adapter_house_tv_info"
            android:layout_alignStart="@+id/tv_name"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/dis_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/house_sever_end_time"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/adapter_house_tv_endtime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/house_sever_end_time_emty"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/adapter_house_tv_pay"
                android:layout_width="@dimen/dp_56"
                android:layout_height="@dimen/dp_22"
                android:background="@drawable/shape_button_black_c"
                android:gravity="center"
                android:text="@string/pay_to"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/adapter_house_ll_rent_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adapter_house_ll_sever_time"
            android:layout_alignStart="@+id/tv_name"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_house_tv_rent_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_ren"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/adapter_house_tv_rent_money_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/public_house_pay_unit_mon"
                android:textColor="@color/text_ren"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>