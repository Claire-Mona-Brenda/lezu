<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_13"
    android:layout_marginTop="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_13"
    android:background="@drawable/shape_user"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_17"
        android:paddingTop="@dimen/dp_22"
        android:paddingEnd="@dimen/dp_22"
        android:paddingBottom="@dimen/dp_17">

        <View
            android:layout_width="@dimen/dp_4"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:background="@color/style_main" />

        <TextView
            android:id="@+id/adapter_rent_people_tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toEndOf="@+id/adapter_rent_people_tv_start_time"
            android:text="-"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/adapter_rent_people_tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_toEndOf="@+id/adapter_rent_people_tv_start_time"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/style_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/ren"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_22"/>
        <TextView
            android:id="@+id/adapter_rent_people_tv_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_18"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_black"/>
        <TextView
            android:id="@+id/adapter_rent_people_tv_remove"
            android:layout_width="@dimen/dp_78"
            android:layout_height="@dimen/dp_32"
            android:background="@drawable/shape_main_circle_stroke"
            android:textColor="@color/text_org"
            android:textSize="@dimen/sp_14"
            android:text="@string/remove"
            android:layout_marginEnd="@dimen/dp_26"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>