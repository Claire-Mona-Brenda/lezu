<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.konka.renting.landlord.home.search.SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height">

        <EditText
            android:id="@+id/edit_search"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:background="@drawable/shape_search_bg"
            android:paddingLeft="@dimen/dp_10"
            android:textSize="@dimen/common_text_size_smallest"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_10"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:hint="@string/search_edit_hint"
            android:drawableLeft="@mipmap/icon_search"
            android:layout_margin="@dimen/dp_10"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/common_cancel"
            android:padding="@dimen/dp_15"
            android:textSize="@dimen/common_text_size_small"
            android:textColor="@color/text_black"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/style_line"/>
    <TextView
        android:id="@+id/tv_search_nothing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_40"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/text_gray"
        android:text="@string/search_nothing_tips"
        android:visibility="gone"/>
    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"/>
</LinearLayout>
