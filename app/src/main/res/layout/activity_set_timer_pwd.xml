<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/include_title_text" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/style_line"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp_16"
        android:text="@string/timer"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_25"
        />
    <LinearLayout
        android:id="@+id/activity_set_timer_pwd_ll_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_25"
        android:paddingEnd="@dimen/dp_30">
        <TextView
            android:id="@+id/activity_set_timer_pwd_tv_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_cccccc"
            android:text="@string/timer_start_time"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"/>
        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/icon_arrow"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/style_line"
        android:layout_marginStart="@dimen/dp_22"/>
    <LinearLayout
        android:id="@+id/activity_set_timer_pwd_ll_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_25"
        android:paddingEnd="@dimen/dp_30">
        <TextView
            android:id="@+id/activity_set_timer_pwd_tv_end_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_cccccc"
            android:text="@string/timer_end_time"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"/>
        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/icon_arrow"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/style_line"
        android:layout_marginStart="@dimen/dp_22"/>

    <TextView
        android:id="@+id/activity_set_timer_pwd_tv_create"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:gravity="center"
        android:layout_marginStart="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_60"
        android:textColor="@color/text_white"
        android:textSize="@dimen/sp_16"
        android:text="@string/to_create"
        android:background="@drawable/shape_button"/>

</LinearLayout>