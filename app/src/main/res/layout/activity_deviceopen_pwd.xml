<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/style_bg_page"
    android:orientation="vertical">

    <include layout="@layout/include_title_text" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/shape_pwd_time_ren"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/open_pwd_time"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_17"
            android:paddingStart="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_14"
            />
        <ImageView
            android:id="@+id/activity_device_open_pwd_img_refresh"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:padding="@dimen/dp_5"
            android:src="@drawable/icon_refresh"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dp_12"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/color_ffffff"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">
            <TextView
                android:id="@+id/activity_device_open_pwd_tv_pwd_1"
                style="@style/tv_open_pwd_set"
                android:background="@drawable/shape_bg_pwd_stroke_miss_right"/>
            <TextView
                android:id="@+id/activity_device_open_pwd_tv_pwd_2"
                style="@style/tv_open_pwd_set"
                android:background="@drawable/shape_bg_pwd_stroke_miss_right"/>
            <TextView
                android:id="@+id/activity_device_open_pwd_tv_pwd_3"
                style="@style/tv_open_pwd_set"
                android:background="@drawable/shape_bg_pwd_stroke_miss_right"/>
            <TextView
                android:id="@+id/activity_device_open_pwd_tv_pwd_4"
                style="@style/tv_open_pwd_set"
                android:background="@drawable/shape_bg_pwd_stroke_miss_right"/>
            <TextView
                android:id="@+id/activity_device_open_pwd_tv_pwd_5"
                style="@style/tv_open_pwd_set"
                android:background="@drawable/shape_bg_pwd_stroke_miss_right"/>
            <TextView
                android:id="@+id/activity_device_open_pwd_tv_pwd_6"
                style="@style/tv_open_pwd_set"
                android:background="@drawable/shape_bg_pwd_stroke"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/text_gray"
            android:text="@string/tips_pwd_time"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_15"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/style_line"
        android:layout_marginTop="@dimen/dp_28"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginEnd="@dimen/dp_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/shape_pwd_self_org"
            >
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_20"
            android:text="@string/open_pwd_self"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/sp_17" />
            <ImageView
                android:id="@+id/activity_device_open_pwd_img_add"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/add"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dp_12"/>
        </LinearLayout>
        <TextView
            android:id="@+id/activity_device_open_pwd_tv_tips"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:gravity="center"
            android:text="@string/open_tips_pwd_self"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/sp_13"
            android:background="@color/color_ffffff" />

        <ListView
            android:id="@+id/activity_device_open_pwd_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@mipmap/pwd_line"
            android:dividerHeight="@dimen/dp_6"
            android:scrollbars="none"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>