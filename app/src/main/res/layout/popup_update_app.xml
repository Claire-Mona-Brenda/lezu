<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_50"
    android:layout_marginRight="@dimen/dp_50"
    android:paddingRight="@dimen/dp_15"
    android:paddingLeft="@dimen/dp_15"
    android:background="@color/color_ffffff">

    <ImageView
        android:layout_width="@dimen/dp_190"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/update_rocket"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_24"/>
    <ImageView
        android:id="@+id/img_close"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:src="@mipmap/lib_map_win_close"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_172"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/color_ffffff">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/style_text_title_big"
            android:textColor="@color/text_black"
            android:text="@string/find_new_version"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/tv_new_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/dp_12"
            android:text="@string/new_version"
            android:textColor="@color/text_black"
            android:layout_marginLeft="@dimen/dp_45"
            android:textSize="@dimen/sp_15"/>
        <TextView
            android:id="@+id/tv_version_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/style_text_context"
            android:textColor="@color/color_black"
            android:layout_below="@+id/tv_new_version"
            android:layout_marginLeft="@dimen/dp_45"/>
        <TextView
            android:id="@+id/tv_version_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_size"
            android:textColor="@color/text_black"
            android:layout_below="@+id/tv_version_num"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_16"
            android:textSize="@dimen/sp_15"/>
        <TextView
            android:id="@+id/tv_version_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_version_content_title"
            android:textSize="@dimen/style_text_context"
            android:textColor="@color/color_black"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_45"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_below="@+id/tv_version_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_btn_bg_open_solid"
            android:text="@string/text_try"
            android:textColor="@color/color_ffffff"
            android:id="@+id/btn_try"
            android:textSize="@dimen/style_text_context"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_content"
            android:layout_below="@+id/btn_try"
            android:textSize="@dimen/style_text_tips"
            android:textColor="@color/text_gray"
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/tv_update_detail"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/dp_24"/>
    </RelativeLayout>
</RelativeLayout>